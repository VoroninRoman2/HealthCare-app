@model IEnumerable<HealthCare_app.Models.HealthcareProvider>

<!DOCTYPE html>
<html>
<head>
    <title>Healthcare Providers</title>
</head>
<body>
    <h1>Healthcare Providers List</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Specialty</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var provider in Model)
            {
                <tr>
                    <td>@provider.Id</td>
                    <td>@provider.FirstName @provider.LastName</td>
                    <td>@provider.Specialty</td>
                    <td>
                        <a href="@Url.Action("Edit", "HealthcareProviders", new { id = provider.Id })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("Delete", "HealthcareProviders", new { id = provider.Id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Create", "HealthcareProviders")" class="btn btn-primary">Add</a>
</body>
</html>